        <h1 class='app-title'><a href='/'>The Tech Blog</a></h1>
      {{/if}}
    </header>
<main class='col-auto'>
      {{{body}}}
    </main>

    {{#if dashboard}}
      <footer class='footer flex-row justify-center'>
        <a href='/api/dashboard/new'>âž• New Post</a>
      </footer>
    {{else}}
