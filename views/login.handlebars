{{!-- Form to login or sign up --}}
<div class="login-page">
    <form class="login">
        <div class="form-section">
            <h3>Login</h3>
        </div>
        <div class="form-section">
            <label>username</label>
            <input type="text" id="login-username">
        </div>
        <div class="form-section">
            <label>password</label>
            <input type="text" id="login-password">
        </div>
        <div class="form-section">
            <button id="login-submit">Login</button>
        </div>
    </form>
    <form class="sign-up">
        <div class="form-section">
            <h3>Sign-up</h3>
        </div>
        <div class="form-section">
            <label>username</label>
            <input type="text" id="sign-up-username">
        </div>
        <div class="form-section">
            <label>email</label>
            <input type="email" id="sign-up-email">
        </div>
        <div class="form-section">
            <label>password</label>
            <input type="password" id="sign-up-password">
        </div>
        <div class="form-section">
            <button id="sign-up-submit" >Sign-up</button>
        </div>
    </form>
</div>

